<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controlyourcar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.controlyourcar.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.controlyourcar.AccelActivity"
            android:label="@string/titleActAccelerometru"
            android:screenOrientation="portrait">
            
        </activity>
        <activity 
            android:name="com.example.controlyourcar.AboutActivity"
            android:label="@string/titleActAbout"
            android:screenOrientation="landscape">
            
        </activity>
        <activity 
            android:name="com.example.controlyourcar.ButoaneActivity"
            android:label="@string/titleActButoane"
            android:screenOrientation="landscape">
            
        </activity>
        
        <activity 
            android:name="com.example.controlyourcar.SettingsActivity"
            android:label="@string/titleActSettings"
            android:screenOrientation="landscape">
            
        </activity>
        
        
    </application>

</manifest>
